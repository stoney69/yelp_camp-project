
<% include partial/header %>


<div class="container">
<header class="jumbotron">  
<div class="container">
    <h1> Welcome to Campground page
    </h1>
    <p>view our hand-picked campground from all over the world</p>
    <p>
    <a class="btn btn-primary btn-lg" href="/campground/new">Add a new campground</a>
    </p>
    </div>
</header>

<div class="row">
    <div class="col-lg-12">
        <h3>Our Most Popular Campgrounds!</h3>
    </div>
</div>

<div class="row" style="display:flex; flex-wrap:wrap;">
    <% campground.forEach(function(campgrounds){%>
    <div class="col-md-3 col-sm-6">
         <div class="img-thumbnail  ">
             <img  class=" img-fluid" src="<%= campgrounds.image%>">  
             <div class="caption">
                    <h4 class="text-center"><%= campgrounds.name%> </h4>
             </div>
        </div>
    </div>
 <% }); %>
</div>
</div>

<% include partial/footer %>